# Render PostgreSQL Configuration
# Copy this file to .env and fill in your Render database details

# Database Configuration (Render PostgreSQL)
DATABASE_URL=postgresql://your_username:your_password@your_host:5432/your_database_name
RENDER_DATABASE_URL=postgresql://your_username:your_password@your_host:5432/your_database_name

# Alternative format (if Render provides individual variables)
# DB_USER=your_username
# DB_PASSWORD=your_password  
# DB_HOST=your_host
# DB_PORT=5432
# DB_NAME=your_database_name

# Environment
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Email Configuration (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# File Upload Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Other Services
FIREBASE_PROJECT_ID=your_firebase_project_id
STRIPE_SECRET_KEY=your_stripe_secret_key
PAYSTACK_SECRET_KEY=your_paystack_secret_key
