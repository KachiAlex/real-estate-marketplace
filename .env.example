# .env (for React frontend)
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key-here

# .env (for Node scripts)
FIREBASE_API_KEY=your-firebase-api-key-here

# Development environment variables
NODE_ENV=development
PORT=5001
FRONTEND_URL=http://localhost:3000

# Postgres
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
# Use port 15432 for the local docker postgres in this repo (change if needed)
DB_PORT=15432
DB_NAME=real_estate_db
DB_REQUIRE_SSL=false              # default to false in development (create a .env file!)
DB_REJECT_UNAUTHORIZED=false
# Prefer setting a full DATABASE_URL when connecting to remote DBs (staging/production)
# Example local fallback: postgresql://postgres:password@localhost:15432/real_estate_db
DATABASE_URL=postgresql://postgres:password@localhost:15432/real_estate_db

# JWT
JWT_SECRET=dev-secret
JWT_REFRESH_SECRET=dev-refresh-secret

# Example Firebase keys for frontend (keep if needed)
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key-here
FIREBASE_API_KEY=your-firebase-api-key-here
